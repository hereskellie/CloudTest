<p id="notice"><%= notice %></p>

<h1>Listing Posts in <%= @review.review_title %></h1>

<table>
  <thead>
    <tr>
      <th>Post message</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_message %></td>
        <td><%= link_to 'Show', review_post_path(@review, post) %></td>
        <td><%= link_to 'Edit', edit_review_post_path(@review, post) %></td>
        <td><%= link_to 'Destroy', review_post_path(@review, post),
            :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_review_post_path(@review) %>
<%= link_to 'Back to Reviews', @review %>
